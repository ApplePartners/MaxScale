[maxscale]
threads=###threads###
admin_pam_readwrite_service=pam_config_msg
log_info=1
users_refresh_time=0

[MySQL-Monitor]
type=monitor
module=mariadbmon
servers= server1, server2
user=maxskysql
password= skysql
monitor_interval=1000
failcount=1
replication_user=repl
replication_password=repl
backend_connect_timeout=5
backend_read_timeout=5
backend_write_timeout=5

[RWSplit-Router]
type=service
router=readwritesplit
servers=server1, server2
user=maxskysql
password=skysql

[RWSplit-Listener]
type=listener
service=RWSplit-Router
protocol=MySQLClient
port=4006
authenticator=PAMAuth, mysqlauth

[ListenerSKIPAUTH]
type=listener
service=RWSplit-Router
protocol=MySQLClient
port=4007
authenticator=PAMAuth, mysqlauth
authenticator_options=skip_authentication=true

[ListenerNOMATCH]
type=listener
service=RWSplit-Router
protocol=MySQLClient
port=4008
authenticator=mysqlauth
authenticator_options=match_host=false,lower_case_table_names=1

[ListenerNOCASE]
type=listener
service=RWSplit-Router
protocol=MySQLClient
port=4009
authenticator=mysqlauth
authenticator_options=lower_case_table_names=2,log_password_mismatch=true

[ListenerClearText]
type=listener
service=RWSplit-Router
protocol=MySQLClient
port=4010
authenticator=pamauth
authenticator_options=pam_use_cleartext_plugin=true

[ListenerMapping]
type=listener
service=RWSplit-Router
port=4011
authenticator=pamauth
authenticator_options=pam_backend_mapping=mariadb

[server1]
type=server
address=###node_server_IP_1###
port=###node_server_port_1###

[server2]
type=server
address=###node_server_IP_2###
port=###node_server_port_2###
