[maxscale]
threads=2

[MariaDB-Monitor]
type=monitor
module=mariadbmon
servers= ###server_line###
user=mariadbmon
password=mariadbmon
monitor_interval=1000ms
failcount=1
replication_user=repl
replication_password=repl
backend_connect_timeout=10s
backend_read_timeout=10s
backend_write_timeout=10s
auto_failover=true

[RW-Split-Router]
type=service
router= readwritesplit
servers=###server_line###
user=maxskysql
password=skysql

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

###server###
