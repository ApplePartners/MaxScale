[maxscale]
threads=###threads###

[MariaDB-Monitor]
type=monitor
module=mysqlmon
servers=###server_line###
user=mariadbmon
password=mariadbmon
monitor_interval=1000
detect_standalone_master=true
failcount=1
replication_user=repl
replication_password=repl
backend_connect_timeout=10
backend_read_timeout=10
backend_write_timeout=10
auto_failover=true
auto_rejoin=true

[RW-Split-Router]
type=service
router=readwritesplit
servers=###server_line###
user=maxservice
password=maxservice

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

###server###
