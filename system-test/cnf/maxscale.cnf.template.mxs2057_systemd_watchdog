match02=SELECT.*.*FROM.*.*t1.*.*WHERE.*.*id.*=.*1
match03=SELECT.*.*FROM.*.*t1.*.*WHERE.*.*id.*=.*1
match04=SELECT.*.*FROM.*.*t1.*.*WHERE.*.*id.*=.*1
match05=SELECT.*.*FROM.*.*t1.*.*WHERE.*.*id.*=.*1
target01=server1
target02=server1
target03=server1
target04=server1
target05=server1

