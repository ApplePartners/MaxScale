[maxscale]
threads=###threads###
log_info=1

[MySQL-Monitor]
type=monitor
module=mysqlmon
servers=server1,server2
user=maxskysql
password=skysql
monitor_interval=1000ms
backend_read_timeout=1s
backend_connect_timeout=1s

[RW-Split-Router]
type=service
router=readwritesplit
servers=server1,server2
user=maxskysql
password=skysql
master_failure_mode=fail_on_write
master_reconnection=true
delayed_retry=true
delayed_retry_timeout=15s

[RW-Split-Listener]
type=listener
service=RW-Split-Router
protocol=MySQLClient
port=4006

[server1]
type=server
