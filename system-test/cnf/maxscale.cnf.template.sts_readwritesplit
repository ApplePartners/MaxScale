[maxscale]
threads=###threads###
log_info=1

###server###

[Monitor]
type=monitor
module=mariadbmon
servers=###server_line###
user=maxskysql
password=skysql
monitor_interval=1000ms

[service1]
type=service
router=readwritesplit
targets=server1,server2,server3
user=maxskysql
password=skysql

[service2]
type=service
router=readwritesplit
targets=server4
user=maxskysql
password=skysql
master_failure_mode=fail_on_write

[combined-service]
type=service
router=readwritesplit
targets=service2,service1
user=maxskysql
password=skysql

[listener1]
type=listener
service=combined-service
protocol=MariaDBClient
port=4006
